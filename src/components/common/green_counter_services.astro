---
import Button from "./button";
import { Counter } from "../helpers"

const { page = 'landing' } = Astro.props;
interface Props {
    page?: string
}
---


<section class={`${page === 'services' ? 'my-0' : 'mt-20'} w-full pt-20 min-h-[60vh] md:min-h-[30vh] xxl:min-h-[100vh] bg-cover bg-no-repeat bg-center lg:pt-40`} style={{ backgroundImage: 'linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .5)), url(/images/solar-panel-on-blue-sky.jpg)'}}>
    <div class="w-[80%] mx-auto flex-col justify-center items-center text-white text-center lg:w-[40%]">
        <h2 class="text-[32px] leading-[32px] font-bold md:text-[60px] md:leading-[60px]" data-aos='fade-up' data-aos-offset='100'>Unmatched Quality & Superior Performance</h2>
        <p class="mt-4 text-[14px] md:text-[17px]" data-aos='fade-up' data-aos-delay="100" data-aos-offset='100'>
            Every LPVT panel undergoes multi-stage testing, including automated EL, flash, and microcrack detection to ensure zero-defect delivery and strict adherence to international standards like IEC and SON-MANCAP. Want to build trust in your project? Book a factory tour with our solar developers in Lagos to experience our commitment to quality first-hand.
        </p>
        <!-- <div class="mt-10" data-aos='fade-up' data-aos-delay="200" data-aos-offset='100'>
            <Button path="#" text="Discover more" className="py-3 px-8 text-white text-[16px] bg-green rounded-full baseline hover:bg-darkBlue" />
        </div> -->
    </div>
    <!-- Bottom Banner -->
    <div class="w-full h-[300px] md:h-[150px] bg-cyan-900 mt-[100px] lg:mt-[250px] flex justify-center items-center">
        <div class="w-[90%] -mt-[120px] md:w-4/5 h-[100px] grid grid-cols-2 md:grid-cols-4 md:-mt-0">
            <div class="flex flex-col justify-center items-center border-r-2 border-b-2 border-b-gray-500 border-r-gray-500 pb-5 md:pb-0 md:border-b-0">
                <span class="text-green text-[24px] font-bold">P-Type, PERC, TOPCon</span>
                <p class="text-white text-[14px] lg:text-[18px] font-semibold">Solar Panel Technology</p>
            </div>
            <div class="flex flex-col justify-center items-center md:border-r-2 border-b-2 border-b-gray-500 md:border-r-gray-500 pb-5 md:pb-0 md:border-b-0">
                <span class="text-green text-center text-[24px] font-bold">550-600W</span>
                <p class="text-white text-[14px] lg:text-[18px] font-semibold">Maximum Power Output</p>
            </div>
            <div class="flex flex-col justify-center items-center border-r-2 border-r-gray-500">
                <span class="text-green text-[24px] font-bold">21.3%</span>
                <p class="text-white text-[14px] lg:text-[18px] mt-3 font-semibold">PV Module/Annum</p>
            </div>
            <div class="flex flex-col justify-center items-center">
                <span class="text-green text-[24px] font-bold">10yr product, 25yr linear performance</span>
                <p class="text-white text-[14px] lg:text-[18px] font-semibold text-center xxl:text-left">Top-tier solar panel warranty</p>
            </div>
        </div>
    </div>
</section>