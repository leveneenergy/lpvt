---
import { Common } from '@components/index';
import Layout from '@components/layout.astro';
import { PRODUCTS_PAGE_DESCRIPTION } from '@utils/constants'
import WhatsAppWidget from "@components/common/Chatbox.tsx";
---

<Layout title='Products' description={PRODUCTS_PAGE_DESCRIPTION}>
    <Common.Hero backgroundImage={'https://res.cloudinary.com/du52ca1q1/image/upload/f_auto,q_auto/v1748203805/Product_Page_-_Cover_Image_olwubr.jpg'} header='Our Products' caption='Cleaner Energies for a Cleaner World.' />

    <WhatsAppWidget client:load />
    <!-- What we offer section -->
	<Common.Offer />

    <!-- Live Green Section -->
	<Common.GreenCounter page='products' />

    <!-- Why choose us -->
	<Common.Solutions />
</Layout>
